<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="{data.ItemName}">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:HGroup verticalAlign="middle" gap="12">
		
		<s:Image source="assets/pics/{data.picture}"/>
		
		<s:VGroup>
			<s:Label text="{data.ItemName}"/>
			<s:Label text="{data.ItemDescription}"/>
			<s:Label text="{data.UnitPrice}"/>
		</s:VGroup>
		
	</s:HGroup>
	
	
</s:View>
