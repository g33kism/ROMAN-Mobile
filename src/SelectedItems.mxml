<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		actionBarVisible="false" tabBarVisible="false" title="SelectedItems">
	<fx:Script>
		<![CDATA[
			
			public var itemname:String;
			[Bindable]
			public var pic:ByteArray;
			[Bindable]
			public var qty:String;
			public var price:String;
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Image x="10" y="10" width="43" height="43" source="{pic}"/>
	<s:Label x="41" y="12" width="11" height="9" backgroundAlpha="25" backgroundColor="#C4C4C4"
			 fontSize="9" text="{qty}"/>
</s:View>
